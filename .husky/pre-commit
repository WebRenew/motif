echo "ğŸ” Running pre-commit checks..."

# Run ESLint
echo "ğŸ“ Linting code..."
pnpm lint || {
  echo "âŒ Linting failed. Please fix errors before committing."
  exit 1
}

# Run TypeScript type checking
echo "ğŸ”§ Type checking..."
pnpm exec tsc --noEmit || {
  echo "âŒ Type checking failed. Please fix type errors before committing."
  exit 1
}

# Auto-regenerate database types if migrations were modified
if git diff --cached --name-only | grep -q "supabase/migrations" ; then
  echo "ğŸ—„ï¸  Migrations modified - regenerating database types..."
  if command -v supabase &> /dev/null; then
    pnpm db:types 2>/dev/null && {
      # Check if types actually changed
      if ! git diff --quiet lib/types/database.types.ts 2>/dev/null; then
        echo "ğŸ“ Types updated - staging changes..."
        git add lib/types/database.types.ts
      fi
    } || {
      echo "âš ï¸  Could not regenerate types (need SUPABASE_ACCESS_TOKEN)"
      echo "   Run manually: pnpm db:types"
    }
  else
    echo "âš ï¸  Supabase CLI not found - skipping type generation"
  fi
fi

echo "âœ… Pre-commit checks passed!"
